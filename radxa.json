{
  "variables": {
    "imagename": "{{env `daimg`}}",
    "dpass": "{{env `FIRST_USER_PASS`}}",
    "duser": "{{env `FIRST_USER_NAME`}}",
    "packages_spaces": "{{env `PACKAGES_WITH_SPACES`}}"
  },
  "builders": [
    {
      "type": "arm",
      "file_urls": ["base.img.xz"],
      "file_checksum_url": "base.sha256",
      "file_checksum_type": "sha256",
      "file_target_extension": "xz",
      "file_unarchive_cmd": ["xz", "--decompress", "$ARCHIVE_PATH"],
      "image_build_method": "reuse",
      "image_path": "{{user `imagename`}}.img",
      "image_size": "5G",

      "image_partitions": [
        {
          "name": "boot",
          "type": "c",
          "start_sector": "32768",
          "filesystem": "vfat",
          "size": "16M",
          "mountpoint": "/boot"
        },
        {
          "name": "efi",
          "type": "ef",
          "start_sector": "65536",
          "filesystem": "vfat",
          "size": "300M",
          "mountpoint": "/boot/efi"
        },
        {
          "name": "root",
          "type": "83",
          "start_sector": "679936",
          "filesystem": "ext4",
          "size": "0",
          "mountpoint": "/"
        }
      ],
      "image_chroot_env": [
        "PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"
      ],
      "qemu_binary_source_path": "/usr/bin/qemu-arm-static",
      "qemu_binary_destination_path": "/usr/bin/qemu-arm-static"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "echo nameserver 8.8.8.8 > /etc/resolv.conf",
        "useradd -p $(openssl passwd -1 {{user `dpass`}}) -m {{user `duser`}}",
        "apt-get update -y",
        "apt-get upgrade -y",
        "apt-get install {{user `packages_spaces`}} -y"
      ]
    },
    {
      "type": "shell",
      "script": "setup.sh"
    }
  ]
}
